{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "incremental": true,
    "strictNullChecks": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@tg/stores/*": [
        "packages/stores/src/*"
      ],      
      "@tg/api/*": [
        "packages/api/src/*"
      ],            
      "@tg/web/*": [
        "packages/web/src/*"
      ],
      "@tg/web-mobile/*": [
        "packages/web-mobile/src/*"
      ],
      "@tg/*": [
        "packages/*/src"
      ],
      "/*": [
        "packages/web/*"
      ],
    },
    "types": [
      "vite/client",
      "vite-plugin-pages/client",
      "vite-plugin-vue-layouts/client",
    ],
  },
  "include": [
    "packages/*/src",
    "env.d.ts"
  ],
}